{
  "clearColor": [0.1, 0.1, 0.1, 1],
  "rendering": {
    "hdr": true,
    "antialiasing": true,
    "imageProcessing": {
      "contrast": 1.0,
      "exposure": 1.0,
      "toneMapping": false,
      "agx": {
        "enabled": true,
        "slope": 2.2,
        "contrast": 1.1,
        "saturation": 1.0,
        "exposureBias": 0.0
      }
    },
    "shadows": {
      "enabled": true,
      "bias": 0.0001,
      "normalBias": 0.0,
      "filter": "pcf"
    },
    "materials": {
      "usePhysicalLights": true,
      "useSpecularOverAlpha": true,
      "useLogarithmicDepth": true
    }
  },
  "postProcesses": [
    {
      "type": "bloom",
      "enabled": false,
      "size": 10,
      "intensity": 0.7,
      "threshold": 0.4
    },
    {
      "type": "glow",
      "enabled": false,
      "mainTextureFixedSize": 1024,
      "blurKernelSize": 32
    },
    {
      "type": "ssao",
      "enabled": true,
      "ratio": 1.0
    }
  ],
  "camera": {
    "type": "arcRotate",
    "name": "mainCamera",
    "alpha": -0.5,
    "beta": 1.2,
    "radius": 12,
    "target": [0, 2, 0],
    "comment": "Camera positioned to view inside the Cornell box from an angle"
  },
  "lights": [
    {
      "type": "hemispheric",
      "name": "envLight",
      "direction": [0, 1, 0],
      "intensity": 0.3,
      "diffuse": [0.8, 0.8, 0.9],
      "groundColor": [0.1, 0.1, 0.2],
      "specular": [0.2, 0.2, 0.3],
      "comment": "Ambient light to ensure scene visibility"
    },
    {
      "type": "point",
      "name": "ceilingLight",
      "position": [0, 6, 0],
      "intensity": 1.5,
      "diffuse": [1.0, 1.0, 1.0],
      "specular": [1.0, 1.0, 1.0],
      "range": 15,
      "shadows": {
        "enabled": true,
        "quality": "high",
        "mapSize": 2048,
        "bias": 0.0001,
        "normalBias": 0.0,
        "filter": "pcf"
      },
      "comment": "Main light source positioned above the ceiling"
    }
  ],
  "materials": [
    {
      "name": "whiteMaterial",
      "diffuseColor": [0.9, 0.9, 0.9],
      "specularColor": [0.3, 0.3, 0.3],
      "specularPower": 32,
      "usePhysicalLights": true,
      "comment": "White material for floor, ceiling, and back wall"
    },
    {
      "name": "redMaterial",
      "diffuseColor": [0.9, 0.2, 0.2],
      "specularColor": [0.3, 0.3, 0.3],
      "specularPower": 32,
      "usePhysicalLights": true,
      "comment": "Red material for the left wall"
    },
    {
      "name": "greenMaterial",
      "diffuseColor": [0.2, 0.9, 0.2],
      "specularColor": [0.3, 0.3, 0.3],
      "specularPower": 32,
      "usePhysicalLights": true,
      "comment": "Green material for the right wall"
    },
    {
      "name": "blueMaterial",
      "diffuseColor": [0.2, 0.2, 0.8],
      "specularColor": [0.2, 0.2, 0.2],
      "specularPower": 32,
      "usePhysicalLights": true
    },
    {
      "name": "testObjectMaterial",
      "diffuseColor": [0.9, 0.9, 0.9],
      "specularColor": [0.5, 0.5, 0.5],
      "specularPower": 64,
      "usePhysicalLights": true,
      "comment": "Material for the test sphere with higher specular power"
    }
  ],
  "meshes": [
    {
      "type": "box",
      "name": "floor",
      "width": 10,
      "height": 0.2,
      "depth": 10,
      "position": [0, 0, 0],
      "rotation": [0, 0, 0],
      "material": "whiteMaterial",
      "shadows": {
        "enabled": true,
        "receiveShadows": true
      },
      "comment": "Floor of the Cornell box, thin but wide"
    },
    {
      "type": "box",
      "name": "ceilingFrameTop",
      "width": 10,
      "height": 1,
      "depth": 4,
      "position": [0, 5.5, 3],
      "rotation": [0, 0, 0],
      "material": "whiteMaterial",
      "shadows": {
        "enabled": true,
        "receiveShadows": true,
        "dropShadow": true
      },
      "comment": "Top edge of ceiling frame"
    },
    {
      "type": "box",
      "name": "ceilingFrameBottom",
      "width": 10,
      "height": 1,
      "depth": 4,
      "position": [0, 5.5, -3],
      "rotation": [0, 0, 0],
      "material": "whiteMaterial",
      "shadows": {
        "enabled": true,
        "receiveShadows": true,
        "dropShadow": true
      },
      "comment": "Bottom edge of ceiling frame"
    },
    {
      "type": "box",
      "name": "ceilingFrameLeft",
      "width": 4,
      "height": 1,
      "depth": 2.5,
      "position": [-3, 5.5, 0],
      "rotation": [0, 0, 0],
      "material": "whiteMaterial",
      "shadows": {
        "enabled": true,
        "receiveShadows": true,
        "dropShadow": true
      },
      "comment": "Left edge of ceiling frame"
    },
    {
      "type": "box",
      "name": "ceilingFrameRight",
      "width": 4,
      "height": 1,
      "depth": 2.5,
      "position": [3, 5.5, 0],
      "rotation": [0, 0, 0],
      "material": "whiteMaterial",
      "shadows": {
        "enabled": true,
        "receiveShadows": true,
        "dropShadow": true
      },
      "comment": "Right edge of ceiling frame"
    },
    {
      "type": "box",
      "name": "backWall",
      "width": 10,
      "height": 5,
      "depth": 0.2,
      "position": [0, 2.5, -5],
      "rotation": [0, 0, 0],
      "material": "whiteMaterial",
      "shadows": {
        "enabled": true,
        "receiveShadows": true
      },
      "comment": "Back wall of the Cornell box, tall and wide but thin"
    },
    {
      "type": "box",
      "name": "leftWall",
      "width": 0.2,
      "height": 5,
      "depth": 10,
      "position": [-5, 2.5, 0],
      "rotation": [0, 0, 0],
      "material": "redMaterial",
      "shadows": {
        "enabled": true,
        "receiveShadows": true
      },
      "comment": "Left wall of the Cornell box, tall and deep but thin"
    },
    {
      "type": "box",
      "name": "rightWall",
      "width": 0.2,
      "height": 5,
      "depth": 10,
      "position": [5, 2.5, 0],
      "rotation": [0, 0, 0],
      "material": "greenMaterial",
      "shadows": {
        "enabled": true,
        "receiveShadows": true
      },
      "comment": "Right wall of the Cornell box, tall and deep but thin"
    },
    {
      "type": "sphere",
      "name": "testSphere",
      "diameter": 1.5,
      "position": [0, 1.5, 0],
      "material": "testObjectMaterial",
      "shadows": {
        "enabled": true,
        "receiveShadows": true,
        "dropShadow": true
      },
      "comment": "Test sphere in the center of the Cornell box"
    }
  ]
} 